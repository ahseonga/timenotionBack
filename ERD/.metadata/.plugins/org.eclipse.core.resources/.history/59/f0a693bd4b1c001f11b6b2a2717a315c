--시퀀스
SELECT
	SEQ_BOARD.NEXTVAL
FROM
	DUAL;
-- 게시판 정보 불러오기 
--        SELECT *
--        FROM GGHJ_BOARD
--        WHERE USER_ID = #{userId}
        
SELECT
	*
FROM
	GGHJ_BOARD
WHERE
	USER_ID = 1 ;
--게시판 데이터 입력하기
